{
  "entrypoint": "index.html",
  "shell": "src/ft-connect-front-end-sdk-tool.html",
  "fragments": [
  ],
  "sources": [
    "src/**/*",
    "robots.txt"
  ],
  "extraDependencies": [
    "bower_components/ace-builds/src-noconflict/mode-html.js",
    "bower_components/ace-builds/src-noconflict/theme-chrome.js",
    "manifest.json"
  ],
  "lint": {
    "rules": [
      "polymer-2-hybrid"
    ],
    "ignoreWarnings": [
      "multiple-doc-comments"
    ],
    "builds": [
      {
        "bundle": false,
        "js": {
          "minify": true,
          "compile": false
        },
        "css": {
          "minify": true
        },
        "html": {
          "minify": true
        },
        "excludes": [
          "/data/"
        ],
        "stripComments": "true",
        "addPushManifest": true,
        "insertPrefetchLinks": true
      }
    ]
  }
}
